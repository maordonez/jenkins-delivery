pipeline {
    stages { 
        stage('Build') { 
             steps {
               echo 'build app'
               sleep 60
          }
        }
        stage('Test') { 
            steps {
               echo 'test app'
               sleep 60
          }
        }
        stage('Deploy') { 
            steps {
               echo 'deploy app'
               sleep 60
          }
        }
    }
}
